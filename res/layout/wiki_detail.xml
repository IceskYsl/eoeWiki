<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<RelativeLayout android:id="@+id/wiki_detail_title"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:orientation="vertical">
    	
	    <ImageView android:id="@+id/wiki_detail_logo"
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/ico_home"/>
	    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tip_android_title" 
	        android:layout_toRightOf="@+id/wiki_detail_logo"
	        android:textColor="@drawable/font_blue_white"
	        android:textSize="20sp"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="5dip"/>
	    
		<View android:layout_width="match_parent"
	    	android:layout_height="3dip"
	    	android:background="@color/blue_line"
	    	android:layout_below="@+id/category_logo"/>
	</RelativeLayout>
	
	<ScrollView android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:fadingEdge="none"
    	android:layout_below="@+id/wiki_detail_title">
		
	    <WebView android:id="@+id/wiki_detail_content"
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"/>
	    
	</ScrollView>
	
	<LinearLayout android:id="@+id/layout_functions"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:orientation="vertical">
		<View android:layout_width="match_parent"
	    	android:layout_height="3dip"
	    	android:background="@color/blue_line"/>
		<LinearLayout android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:padding="10dip">
	    	
		    <LinearLayout
		        android:id="@+id/layout_parent_directory"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dip"
		        android:layout_weight="1"
		        android:background="@drawable/ico_parent_directory"
		        android:clickable="true"
		        android:gravity="center" >
		        <ImageView android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    
		    <LinearLayout android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:id="@+id/layout_fullscreen"
	    		android:clickable="true"
	    		android:gravity="center"
	    		android:background="@drawable/ico_fullscreen"
	    		android:layout_marginLeft="5dip">
		        <ImageView android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    
		    <LinearLayout android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:id="@+id/layout_favorite"
	    		android:clickable="true"
	    		android:gravity="center"
	    		android:background="@drawable/favorites_00"
	    		android:layout_marginLeft="15dip">
		        <ImageView android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    
		    <LinearLayout android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:id="@+id/layout_share"
	    		android:clickable="true"
	    		android:gravity="center"
	    		android:background="@drawable/ico_share"
	    		android:layout_marginLeft="5dip">
		        <ImageView android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"/>
		    </LinearLayout>
		    
		    <LinearLayout android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_weight="1"
	    		android:id="@+id/layout_about"
	    		android:clickable="true"
	    		android:gravity="center"
	    		android:background="@drawable/ico_about"
	    		android:layout_marginRight="5dip">
		        <ImageView android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:src="@drawable/btn_about_x"/>
		    </LinearLayout>
		    
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>